@{ ViewBag.Title = "Лобби поселенцев"; }

<!-- 1. Библиотека строго ПЕРЕД основным кодом -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Проверяем, загрузилась ли библиотека
        if (typeof signalR === "undefined") {
            console.error("SignalR не загружен! Проверь интернет или ссылку на CDN.");
            return;
        }

        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/gameHub")
            .configureLogging(signalR.LogLevel.Information)
            .build();

        const roomCode = "@ViewBag.RoomCode";
        const userName = "@ViewBag.UserName";

        connection.on("UpdatePlayerList", (players) => {
            console.log("Получен список игроков:", players);
            const listElement = document.getElementById("playerList");
            listElement.innerHTML = "";
            players.forEach(player => {
                const li = document.createElement("li");
                li.textContent = player === userName ? `${player} (Вы)` : player;
                listElement.appendChild(li);
            });

            if (players.length >= 2) {
                document.getElementById("startBtn").style.display = "block";
            }
        });

        connection.on("GameStarted", () => {
            // Перенаправляем игрока на страницу игры, передавая его имя и код комнаты
            window.location.href = `/Game/Play?code=${roomCode}&user=${userName}`;
        });

        connection.start()
            .then(() => {
                console.log("Соединение установлено!");
                connection.invoke("JoinRoom", roomCode, userName);
            })
            .catch(err => console.error("Ошибка старта:", err.toString()));

        // Обработка кнопки старта
        document.getElementById("startBtn").onclick = () => {
            connection.invoke("StartGame", roomCode);
        };
    });
</script>

<div class="lobby-container">
    <h2>Порт: <span id="roomCode">@ViewBag.RoomCode</span></h2>
    <div class="player-list-box">
        <h3>Прибывшие колонисты:</h3>
        <ul id="playerList">
            <li>@ViewBag.UserName (Вы)</li>
        </ul>
    </div>

    <div class="controls">
        <button id="startBtn" class="btn-wood" style="display:none;">Поднять паруса (Старт)</button>
        <p class="wait-msg">Ждем остальных участников...</p>
    </div>
</div>

<style>
    .lobby-container { background: #fdf5e6; border: 8px solid #a0522d; padding: 20px; max-width: 500px; margin: 50px auto; }
    .player-list-box { background: rgba(139, 69, 19, 0.1); border-radius: 10px; padding: 15px; margin: 20px 0; }
    #playerList { list-style: none; padding: 0; font-size: 1.2rem; }
    #playerList li { padding: 5px; border-bottom: 1px dashed #a0522d; }
    .btn-wood { background: #8b4513; color: white; padding: 15px; width: 100%; border: none; cursor: pointer; font-size: 1.1rem; }
</style>
